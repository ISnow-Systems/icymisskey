root = true

[*]
indent_style = tab
indent_size = 4
charset = utf-8
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
max_line_length = off
tab_width = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space
tab_width = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2
